# Database 1 (Customer Database) Configuration
DB1_HOST=localhost
DB1_PORT=5432
DB1_NAME=customer_db
DB1_USER=postgres
DB1_PASSWORD=your_password_here

# Database 2 (Employee Database) Configuration
DB2_HOST=localhost
DB2_PORT=5432
DB2_NAME=employee_db
DB2_USER=postgres
DB2_PASSWORD=your_password_here

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Backup Configuration
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=30

# pgBackRest Configuration
PGBACKREST_STANZA=demo
PGBACKREST_BACKUP_PATH=/var/lib/pgbackrest
PGBACKREST_PGDATA=/var/lib/postgresql/15/main

# Backup Scheduling Configuration
FULL_BACKUP_SCHEDULE=weekly
INCREMENTAL_BACKUP_SCHEDULE=2min
INCREMENTAL_BACKUP_INTERVAL_MINUTES=2

# MCP Server Configuration
MCP_SERVER_URL=http://localhost:8082
