# .env file for PostgreSQL Backup MCP System
# Copy this to .env and configure for your environment

# ============================================================================
# PG1 Server Configuration
# ============================================================================
PG1_HOST=localhost
PG1_PORT=5432
PG1_DATABASE=postgres
PG1_USER=postgres
PG1_PASSWORD=postgres
PG1_BACKUP_DIR=./backups/PG1

# ============================================================================
# PG2 Server Configuration
# ============================================================================
PG2_HOST=localhost
PG2_PORT=5433
PG2_DATABASE=postgres
PG2_USER=postgres
PG2_PASSWORD=postgres
PG2_BACKUP_DIR=./backups/PG2

# ============================================================================
# FastAPI Configuration
# ============================================================================
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000

# ============================================================================
# MCP Server Paths
# ============================================================================
MCP_PG1_SCRIPT=./mcp_local/postgres_backup_server.py
MCP_PG2_SCRIPT=./mcp_local/postgres_backup_server.py

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=INFO
